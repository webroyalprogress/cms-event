generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    // e.g. "Food"
  slug      String    @unique // e.g. "food"
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  price       Float
  slug        String          @unique
  description String?
  excerpt     String?
  image       String?
  categoryId  Int              // ðŸ”‘ tambahin ini
  category    Category  @relation(fields: [categoryId], references: [id])
  createdAt   DateTime        @default(now())
  events      ProductEvent[]
}


model Event {
  id        Int            @id @default(autoincrement())
  name      String
  products  ProductEvent[]
  slug      String         @unique
  createdAt DateTime       @default(now())
}

model ProductEvent {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  event     Event   @relation(fields: [eventId], references: [id])
  eventId   Int
}


model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
}